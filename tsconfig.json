  "compilerOptions": {
    "target": "ES2019",
    "module": "Node16",
    "moduleResolution": "node16",

    "declaration": true,
    "emitDeclarationOnly": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],

    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/*.ts"]
}
